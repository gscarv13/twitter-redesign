<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">

      <h2 class="title is-2">Edit <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

<div class="field">
        <div class="control">
          <%= f.input :full_name,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "full_name", class:"input" },
                      wrapper: false, 
                      label_html: { class:"label" } %>
        </div>
      </div>
      <div class="field">
        <div class="control">
          <%= f.input :username,
                      required: false,
                      input_html: { autocomplete: "username", class:"input" },
                      wrapper: false, 
                      label_html: { class:"label" } %>
        </div>
      </div>      
      <div class="field">
        <div class="control">
          <%= f.input :email,
                      required: false,
                      input_html: { autocomplete: "email", class:"input" },
                      wrapper: false, 
                      label_html: { class:"label" } %>
        </div>
      </div>      
      <div class="field">
        <div class="control">
          <%= f.input :password,
                      required: false,
                      hint: "leave it blank if you don't want to change it",
                      input_html: { autocomplete: "new-password", class:"input" },
                      wrapper: false, 
                      label_html: { class:"label" } %>
        </div>
      </div>      
      <div class="field">
        <div class="control">
          <%= f.input :password_confirmation,
                      required: false,
                      input_html: { autocomplete: "new-password", class:"input" },
                      wrapper: false, 
                      label_html: { class:"label" } %>
        </div>
      </div>
      <div class="field">
        <div class="control">
          <%= f.input :current_password, 
                      hint: "we need your current password to confirm your changes", 
                      required: true,
                      input_html: { class: "input"},
                      wrapper: false,
                      label_html: { class: "label" } %>
        </div>
      </div>
      <div class="field">
        <div class="control">
          <%= f.input :cover_image_cache, as: :hidden, wrapper: false %>
          <%= f.input :cover_image, as: :file, wrapper: false %>
        </div>
      </div>
      <div class="field">
        <div class="control">
          <%= f.input :photo_cache, as: :hidden, wrapper: false %>
          <%= f.input :photo, as: :file, wrapper: false %>
        </div>
      </div>
  <br>
  <div class="form-actions">
    <%= f.button :submit, "Update", class:"button is-info is-medium" %>
  </div>
<% end %>
<hr>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
</div>
    </div>
  </div>
</section>
